<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/_4mdp">
    <!--view poster-->
    <View
        android:id="@+id/view_bottom"
        android:layout_width="0dp"
        android:layout_height="@dimen/_160mdp"
        android:layout_marginTop="@dimen/_8mdp"
        android:layout_marginBottom="@dimen/_8mdp"
        android:background="@drawable/bg_ticket_edge"
        android:backgroundTint="@color/Gray_x11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <!--text-->
    <View
        android:id="@+id/view_title"
        android:layout_width="@dimen/_100mdp"
        android:layout_height="@dimen/_20mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/dark_gunmetal_alpha"
        android:layout_marginBottom="@dimen/_20mdp"
        app:layout_constraintBottom_toBottomOf="@id/view_bottom"
        app:layout_constraintStart_toStartOf="@id/view_bottom"
        app:layout_constraintEnd_toEndOf="@id/view_bottom"
        />
</androidx.constraintlayout.widget.ConstraintLayout>