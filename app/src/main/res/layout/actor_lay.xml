<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_6mdp">
    <!--title-->
    <TextView
        android:id="@+id/actor_txt"
        style="@style/title_Style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_actor"
        android:textAppearance="@style/TextAppearance_Bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--list-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/actor_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_6mdp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/actor_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>