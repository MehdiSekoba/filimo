<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_24mdp">
<View
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@drawable/bg_circle"
    android:backgroundTint="@color/shimmer_color"
    android:id="@+id/v_toolbar"/>
    <!--back-->
    <View
        android:id="@+id/view_back"
        android:layout_width="@dimen/_66mdp"
        android:layout_height="@dimen/_4mdp"
        android:background="@drawable/bg_square"
        android:backgroundTint="@color/dark_gunmetal_alpha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/v_toolbar"
        android:layout_marginStart="@dimen/_18mdp"
        app:layout_constraintBottom_toBottomOf="@id/v_toolbar"
        />
<!--content-->
    <View
        android:id="@+id/view_title"
        android:layout_width="@dimen/_46mdp"
        android:layout_height="@dimen/_10mdp"
        android:background="@drawable/bg_square"
        android:backgroundTint="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_toolbar"
        android:layout_marginTop="@dimen/_10mdp"
        />
    <View
        android:id="@+id/view_desc"
        android:layout_width="@dimen/_46mdp"
        android:layout_height="@dimen/_10mdp"
        android:background="@drawable/bg_square"
        android:backgroundTint="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_10mdp"
        app:layout_constraintTop_toBottomOf="@id/v_toolbar" />
    <View
        android:id="@+id/content_1"
        android:layout_width="@dimen/_200mdp"
        android:layout_height="@dimen/_200mdp"
        android:background="@drawable/bg_square"
        android:backgroundTint="@color/shimmer_color"
        app:layout_constraintTop_toBottomOf="@id/view_title"
        android:layout_marginTop="@dimen/_6mdp"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:layout_width="@dimen/_200mdp"
        android:layout_height="@dimen/_200mdp"
        android:background="@drawable/bg_square"
        android:backgroundTint="@color/shimmer_color"
        app:layout_constraintTop_toBottomOf="@id/view_title"
        android:layout_marginTop="@dimen/_6mdp"
        android:layout_marginStart="@dimen/_10mdp"
        app:layout_constraintStart_toEndOf="@id/content_1"/>
    <!--row 2-->
    <View
        android:id="@+id/view_title_1"
        android:layout_width="@dimen/_46mdp"
        android:layout_height="@dimen/_10mdp"
        android:background="@drawable/bg_square"
        android:backgroundTint="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_1"
        android:layout_marginTop="@dimen/_10mdp"
        />
    <View
        android:id="@+id/view_desc_1"
        android:layout_width="@dimen/_46mdp"
        android:layout_height="@dimen/_10mdp"
        android:background="@drawable/bg_square"
        android:backgroundTint="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_10mdp"
        app:layout_constraintTop_toBottomOf="@id/content_1" />
    <View
        android:id="@+id/content_3"
        android:layout_width="@dimen/_200mdp"
        android:layout_height="@dimen/_200mdp"
        android:background="@drawable/bg_square"
        android:backgroundTint="@color/shimmer_color"
        app:layout_constraintTop_toBottomOf="@id/content_1"
        android:layout_marginTop="@dimen/_26mdp"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/content_4"
        android:layout_width="@dimen/_200mdp"
        android:layout_height="@dimen/_200mdp"
        android:background="@drawable/bg_square"
        android:backgroundTint="@color/shimmer_color"
        app:layout_constraintTop_toTopOf="@id/content_3"
        android:layout_marginTop="@dimen/_6mdp"
        android:layout_marginStart="@dimen/_10mdp"
        app:layout_constraintStart_toEndOf="@id/content_3"/>
    <!--row 3-->
    <View
        android:id="@+id/view_title_3"
        android:layout_width="@dimen/_46mdp"
        android:layout_height="@dimen/_10mdp"
        android:background="@drawable/bg_square"
        android:backgroundTint="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_3"
        android:layout_marginTop="@dimen/_10mdp"
        />
    <View
        android:id="@+id/view_desc_2"
        android:layout_width="@dimen/_46mdp"
        android:layout_height="@dimen/_10mdp"
        android:background="@drawable/bg_square"
        android:backgroundTint="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_10mdp"
        app:layout_constraintTop_toBottomOf="@id/content_3" />
    <View
        android:id="@+id/content_5"
        android:layout_width="@dimen/_200mdp"
        android:layout_height="@dimen/_200mdp"
        android:background="@drawable/bg_square"
        android:backgroundTint="@color/shimmer_color"
        app:layout_constraintTop_toBottomOf="@id/view_title_3"
        android:layout_marginTop="@dimen/_26mdp"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/content_6"
        android:layout_width="@dimen/_200mdp"
        android:layout_height="@dimen/_200mdp"
        android:background="@drawable/bg_square"
        android:backgroundTint="@color/shimmer_color"
        app:layout_constraintTop_toTopOf="@id/content_5"
        android:layout_marginTop="@dimen/_6mdp"
        android:layout_marginStart="@dimen/_10mdp"
        app:layout_constraintStart_toEndOf="@id/content_5"/>
</androidx.constraintlayout.widget.ConstraintLayout>