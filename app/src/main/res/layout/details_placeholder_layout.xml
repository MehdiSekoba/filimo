<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--cover-->
    <View
        android:id="@+id/bg_cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_240mdp"
        android:background="@color/shimmer_color"
        app:layout_constraintTop_toTopOf="parent" />
    <!--scroll-->
    <View
        android:id="@+id/view_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/mines27mdp"
        android:background="@drawable/bg_top_round"
        android:backgroundTint="@color/Gray_x11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bg_cover" />
    <!--poster-->
    <View
        android:id="@+id/view_poster"
        android:layout_width="@dimen/_100mdp"
        android:layout_height="@dimen/_120mdp"
        android:layout_marginStart="@dimen/_22mdp"
        android:background="@drawable/bg_square"
        android:backgroundTint="@color/dark_gunmetal_alpha"
        app:layout_constraintBottom_toTopOf="@id/view_scroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_scroll" />
    <!--title-->
    <View
        android:id="@+id/view_title"
        android:layout_width="@dimen/_100mdp"
        android:layout_height="@dimen/_10mdp"
        android:layout_marginStart="@dimen/_10mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:background="@drawable/bg_square"
        android:backgroundTint="@color/shimmer_color"
        app:layout_constraintStart_toEndOf="@id/view_poster"
        app:layout_constraintTop_toTopOf="@id/view_scroll" />
    <!--des-->
    <View
        android:id="@+id/view_des1"
        android:layout_width="0dp"
        android:layout_height="@dimen/_10mdp"
        android:layout_marginStart="@dimen/_10mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:layout_marginEnd="@dimen/_6mdp"
        android:background="@drawable/bg_square"
        android:backgroundTint="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_poster"
        app:layout_constraintTop_toBottomOf="@id/view_title" />
    <!--des2-->
    <View
        android:id="@+id/view_des2"
        android:layout_width="@dimen/_60mdp"
        android:layout_height="@dimen/_10mdp"
        android:layout_marginStart="@dimen/_10mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:layout_marginEnd="@dimen/_6mdp"
        android:background="@drawable/bg_square"
        android:backgroundTint="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_poster" />
    <!--des all-->
    <View
        android:id="@+id/view_des_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80mdp"
        android:layout_marginStart="@dimen/_10mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:layout_marginEnd="@dimen/_6mdp"
        android:background="@drawable/bg_square"
        android:backgroundTint="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_des2" />
    <!--similar-->
    <View
        android:id="@+id/view_similar"
        android:layout_width="@dimen/_60mdp"
        android:layout_height="@dimen/_10mdp"
        android:layout_marginStart="@dimen/_10mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:layout_marginEnd="@dimen/_6mdp"
        android:background="@drawable/bg_square"
        android:backgroundTint="@color/shimmer_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_des_all" />
    <!--similar list-->
    <View
        android:id="@+id/view_sim1"
        android:layout_width="@dimen/_100mdp"
        android:layout_height="@dimen/_100mdp"
        android:background="@drawable/bg_square"
        android:backgroundTint="@color/shimmer_color"
 />
    <View
        android:id="@+id/view_sim2"
        android:layout_width="@dimen/_100mdp"
        android:layout_height="@dimen/_100mdp"
        android:background="@drawable/bg_square"
        android:backgroundTint="@color/shimmer_color"
 />
    <View
        android:id="@+id/view_sim3"
        android:layout_width="@dimen/_100mdp"
        android:layout_height="@dimen/_100mdp"
        android:background="@drawable/bg_square"
        android:backgroundTint="@color/shimmer_color"
 />
    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/view_similar"
        android:layout_marginTop="@dimen/_6mdp"
        app:constraint_referenced_ids="view_sim1,view_sim2,view_sim3"/>

</androidx.constraintlayout.widget.ConstraintLayout>